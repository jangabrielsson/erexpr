{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Plua: Current Fibaro File",
      "type": "luaMobDebug",
      "request": "launch",
      "workingDirectory": "${workspaceFolder}",
      "sourceBasePath": "${workspaceFolder}",
      "listenPort": 8172,
      "stopOnEntry": false,
      "sourceEncoding": "UTF-8",
      "interpreter": "plua",
      "arguments": [
        "--fibaro",
        "--run-for",
        "60",
        "${relativeFile}"
      ],
      "listenPublicly": true
    }
  ]
}